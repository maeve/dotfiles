#!/bin/bash

system_type=$(uname -s)

if [ "$system_type" = "Darwin" ]; then
  if [ -f "$HOME/.bash_profile" ]; then
    echo "Initializing shell"
    # If this is the very first time we're bootstrapping, then this will not
    # have been sourced yet; otherwise, it harms nothing
    source "$HOME/.bash_profile"
  fi

  if ! command -v brew >/dev/null 2>&1; then
    echo "Installing homebrew"
    /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
  fi

  if [ -f "$HOME/.Brewfile" ]; then
    echo "Updating homebrew bundle"
    brew bundle --global
  fi

  # This should always be safe to run, I think
  echo "Updating yadm submodules"
  yadm submodule update --init --recursive

  echo "Bootstrapping neovim"
  # Neovim will bootstrap itself the first time it is opened
  nvim '+qall'

  echo "Installing go linters"
  gometalinter --install

  if [ -d "$HOME/.iterm2" ]; then
    echo "Configuring iterm2"
    # If iterm2 has ever been run before, there will be a cached set of prefs
    # we need to blow away first
    defaults delete com.googlecode.iterm2
    defaults write com.googlecode.iterm2 LoadPrefsFromCustomFolder -bool true
    defaults write com.googlecode.iterm2 PrefsCustomFolder "$HOME/.iterm2"
  fi

  if [ ! -f "$HOME/.base16_theme" ]; then
    echo "Configuring terminal for 256 colors"
    ln -s $HOME/.config/base16-shell/scripts/base16-tomorrow-night.sh .base16_theme
    . .base16_theme
  fi

  echo "Updating the yadm repo origin URL"
  yadm remote set-url origin "git@github.com:maeve/dotfiles.git"

  if [ ! -d "$(rbenv root)/plugins/rbenv-default-gems" ]; then
    echo "Installing rbenv-default-gems plugin"
    git clone https://github.com/rbenv/rbenv-default-gems.git \
      "$(rbenv root)/plugins/rbenv-default-gems"
  fi

  if [ ! -d "$(rbenv root)/plugins/rbenv-bundler-ruby-version" ]; then
    echo "Installing rbenv-bundler-ruby-version"
    git clone https://github.com/aripollak/rbenv-bundler-ruby-version.git \
      "$(rbenv root)/plugins/rbenv-bundler-ruby-version"
  fi

  if [ ! -d "$(rbenv root)/plugins/rbenv-aliases" ]; then
    echo "Installing rbenv-aliases"
    git clone git://github.com/tpope/rbenv-aliases.git \
      "$(rbenv root)/plugins/rbenv-aliases"
    rbenv alias --auto
  fi
fi
